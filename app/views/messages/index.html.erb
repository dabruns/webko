<h1>Schwarzes Brett</h1>

<% @messages.each do |message| %>
    <div class="message">
      <h4><%= link_to message.title, message%></h4>
      <% if message.important %>
         <font color="red">Achtung Wichtig!</font>
      <% end %>
      <p><%= message.description.first(120) +"..." %></p>

      <p><%= message.date.strftime('%d.%m.%y') %></p>
    </div>
<hr>
<% end %>
<p><%= link_to "Neue Nachricht anlegen", new_message_path%></p>
<p><%= paginate @messages %></p>
