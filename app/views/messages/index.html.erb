<h1>Schwarzes Brett</h1>

<% @messages.each do |message| %>
    <div class="message">
      <h4><%= link_to message.title, message%></h4>
      <% if message.important %>
          <p><font color="red">Achtung Wichtig!</font></p>
      <% end %>
      <p><%= message.description.first(80) +"..." %></p>

      <p><%= message.date %></p>
    </div>
<% end %>
<p><%= link_to "Neue Nachricht anlegen", new_message_path%></p>
<p><%= paginate @messages %></p>