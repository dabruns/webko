<h1>Schwarzes Brett</h1>

<% @messages.each do |message| %>
    <div class="message">
      <h4><%= link_to message.title, message%>
      <% if message.important %>
         <font color="red">- Wichtig!</font>
      <% end %>
        <p>Verfasst am: <%= message.date.strftime('%d.%m.%y') %></p></h4>
      <p><%= message.description.truncate_words(40)  %>
      <% if message.description.length >120 %>
          ... <%= link_to "[Weiterlesen]", message%>
            </p>
      <% end %>

    </div>
<hr>
<% end %>
<p><%= link_to "Neue Nachricht anlegen", new_message_path%></p>
<p><%= paginate @messages %></p>
