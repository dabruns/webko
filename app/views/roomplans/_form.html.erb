<%= form_for(@roomplan) do |f| %>
  <% if @roomplan.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@roomplan.errors.count, "error") %> verhindert/verhindern die Speicherung des Eintrags:</h2>

      <ul>
      <% @roomplan.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
    <div class="field">
      <%= f.label 'Raum' %><br>
      <%= f.collection_select :room_id, Room.all, :id, :name %>
    </div>
  <div class="field">
    <%= f.label 'Benutzung' %><br>
    <%= f.text_field :usage %>
  </div>
  <div class="field">
    <%= f.label 'Start' %><br>
    <%= f.datetime_select :start_time %>
  </div>
  <div class="field">
    <%= f.label 'Ende' %><br>
    <%= f.datetime_select :end_time %>
  </div>
  <div class="actions">
    <%= f.submit value='Abschicken' %>
  </div>
<% end %>
