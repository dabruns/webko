<p id="notice"><%= notice %></p>

<h1>Listing Roomplans</h1>

<h2><%= link_to 'New Roomplan', new_roomplan_path %></h2>

<table>
  <thead>
    <tr>
      <th>Room</th>
      <th>Usage</th>
      <th>Start time</th>
      <th>End time</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @roomplans.each do |roomplan| %>
      <tr>
        <td><%= roomplan.room.name %></td>
        <td><%= roomplan.usage %></td>
        <td><%= roomplan.start_time %></td>
        <td><%= roomplan.end_time %></td>
        <td><%= link_to 'Show', roomplan %></td>
        <td><%= link_to 'Edit', edit_roomplan_path(roomplan) %></td>
        <td><%= link_to 'Destroy', roomplan, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
<br>


<%= month_calendar events: @roomplans do |date, roomplans| %>
    <%= date %>

    <% roomplans.each do |roomplan| %>
        <div>
          <%= link_to roomplan.title, roomplan %>
          <br>
          <%= roomplan.room.name %>
        </div>
    <% end %>
<% end %>


<h2>Insgesamt verfügbare Räume</h2>

<% @rooms.each do |room| %>
    <ul>
      <li><%= room.name %></li>
    </ul>

<% end %>
